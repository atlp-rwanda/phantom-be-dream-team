{
    "swagger": "2.0",
    "info": {
        "title": "Dream Team Phantom App APIs",
        "description": "API Documentations using Swagger",
        "version": "1.0.0",
        "contact": {
            "name": "Dream Team",
            "email": "dreamphantom@gmail.com",
            "url": "www.dreamteam.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/",
            "name": "DEV"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Welcome"
                ],
                "summary": "Welcome Message",
                "description": "Welcome Message",
                "operationId": "Welcome Message",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Welcome To Dream Team Phantom App"
                    }
                }
            }
        },
        "/api/v1/users/login": {
            "post": {
                "tags": [
                    "Sign-in to Phantom"
                ],
                "summary": "User Login | Admin | Operator | Driver",
                "description": "user's login either admin , operator and driver",
                "operationId": "userLogin",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Resource payload",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "email",
                                "password"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Login Successfully"
                    }
                }
            }
        },
        "/api/v1/bustoroutes/:routeId/:busId": {
            "post": {
                "tags": [
                    "Bus To Route Assignment"
                ],
                "summary": "Bus To Route Assignment",
                "description": "The operator should be able to Create Bus To Route Assignment",
                "operationId": "Bus To Route Assignment",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "busId",
                        "in": "path",
                        "type": "string",
                        "description": "Bus ID",
                        "required": true
                    },
                    {
                        "name": "routeId",
                        "in": "path",
                        "type": "string",
                        "description": "Route ID",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Bus Assined Successfully"
                    }
                }
            }
        },
        "/api/v1/bustoroutes/": {
            "get": {
                "tags": [
                    "Bus To Route Assignment"
                ],
                "summary": "Bus To Route Assignment",
                "description": "The operator should be able to get Bus To Route Assignment",
                "operationId": "Bus To Route Assignment",
                "responses": {
                    "201": {
                        "description": "Data Fetched Successfully"
                    }
                }
            }
        },
        "/api/v1/bustoroutes/{id}/": {
            "get": {
                "tags": [
                    "Bus To Route Assignment"
                ],
                "summary": "Bus To Route Assignment",
                "description": "The operator should be able to get Bus To Route Assignment",
                "operationId": "Bus To Route Assignment",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "description": "Assignment ID",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Data Fetched Successfully"
                    }
                }
            }
        },
        "/api/v1/bustoroutes/{id}": {
            "delete": {
                "tags": [
                    "Bus To Route Assignment"
                ],
                "summary": "Bus To Route Assignment",
                "description": "The operator should be able to unAssign Bus To Route Assignment",
                "operationId": "Bus To Route Assignment",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "description": "Assignment ID",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bus unAssigned Successfully"
                    }
                }
            }
       
    }
}
}