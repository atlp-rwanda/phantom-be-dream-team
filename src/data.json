{
    "swagger": "2.0",
    "info": {
        "title": "Dream Team Phantom App APIs",
        "description": "API Documentations using Swagger",
        "version": "1.0.0",
        "contact": {
            "name": "Dream Team",
            "email": "dreamphantom@gmail.com",
            "url": "www.dreamteam.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
     },
     "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
     },
     "servers": [
        {
            "url": "http://localhost:3000/",
            "name": "DEV"
        }
     ],
     "paths": {
        "/": {
            "get": {
                "tags": [
                    "Welcome"
                ],
                "summary": "Welcome Message",
                "description": "Welcome Message",
                "operationId": "Welcome Message",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Welcome To Dream Team Phantom App"
                    }
                }
            }
        },
        "/api/v1/users/login": {
            "post": {
                "tags": ["Sign-in to Phantom"],
                "summary": "User Login | Admin | Operator | Driver",
                "description": "user's login either admin , operator and driver",
                "operationId": "userLogin",
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "Resource payload",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "email": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        },
                        "required": ["email", "password"]
                    }
                }],
                "responses": {
                    "201": {
                        "description": "Login Successfully"
                    }
                }
            }
        },
       
        "/api/v1/users/logout": {
            "post": {
              "tags": ["Authentication"],
              "summary": "This will logout a user",
              "description": "",
              "produces": ["application/json"],
              "parameters": [
                {
                  "name": "Authorization",
                  "in": "header",
                  "required": false
                }
              ],
              "responses": {
                "200": {
        
                  "description": "Logged out successfully"
        
        
                },
        
                
                "401": {
                  "description": "You are not allowed. Check Your token"
                }
                
            
                  }
                    }
            
    
}
}
}