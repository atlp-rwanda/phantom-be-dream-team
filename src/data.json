{
    "swagger": "2.0",
    "info": {
        "title": "Dream Team Phantom App APIs",
        "description": "API Documentations using Swagger",
        "version": "1.0.0",
        "contact": {
            "name": "Dream Team",
            "email": "dreamphantom@gmail.com",
            "url": "www.dreamteam.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/",
            "name": "DEV"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Welcome"
                ],
                "summary": "Welcome Message",
                "description": "Welcome Message",
                "operationId": "Welcome Message",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Welcome To Dream Team Phantom App"
                    }
                }
            }
        },
        "/api/v1/users/login": {
            "post": {
                "tags": ["Sign-in to Phantom"],
                "summary": "User Login | Admin | Operator | Driver",
                "description": "user's login either admin , operator and driver",
                "operationId": "userLogin",
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "Resource payload",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "email": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        },
                        "required": ["email", "password"]
                    }
                }],
                "responses": {
                    "201": {
                        "description": "Login Successfully"
                    }
                }
            }
        },


        "/api/v1/buses": {
            "post": {
                "tags": ["Crud operation for Buses"],
                "summary": "adding abus ",
                "description": "adding a plate mumber,seeat and bustype",
                "operationId": "addBus",
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "Resource payload",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "plate": {
                                "type": "string"
                            },
                            "busType": {
                                "type": "string"
                            },
                            "seat": {
                                "type": "string"
                            }
                        },
                        "required": ["plate", "busType","seat"]
                    }
                }],
                "responses": {
                    "201": {
                        "description": "Bus successfully created"
                    }
                }
            }
        },

        "/api/v1/buses/": {
            "get": {
                "tags": ["Crud operation for Buses"],
                "summary": "getting all bus ",
                "description": "getting a plate mumber,seeat and bustype",
                "operationId": "GetBus",
                "produces": [
                    "application/json"
                ],
                
                "responses": {
                    "200": {
                        "description": "All buses found"
                    }
                }
            }
        },

        "/api/v1/buses/{id}": {
            "get": {
                "tags": ["Crud operation for Buses"],
                "summary": "getting a bus ",
                "description": "getting a plate mumber,seeat and bustype",
                "operationId": "GetBus",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "description": "Bus ID",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bus found"
                    }
                }
            }
        },



        "/api/v1/buses/{id}/": {
            "delete": {
                "tags": ["Crud operation for Buses"],
                "summary": "deleting a bus ",
                "description": "deleting a plate mumber,seeat and bustype",
                "operationId": "DeleteBus",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "description": "Bus ID",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bus deleted"
                    }
                }
            }
        }

       

    }
}